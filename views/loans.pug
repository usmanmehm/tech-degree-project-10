extends layout 

block content 
    body
    h1 Loans
    p
      a.button(href='/loans/new') Create New Loan
    p
      | Filters 
      a(href='/loans') All
      |  
      a(href='/loans?filter=overdue') Overdue
      |  
      a(href='/loans?filter=checked_out') Checked Out
    table
      thead
        tr
          th Book
          th Patron 
          th Loaned on
          th Return by 
          th Returned on
          th Action
      tbody
        each loan in loans
          tr
            td
              a(href='/books/details/' + loan.book_id) #{loan.Book.title}
            td
              a(href='/patrons/details/' + loan.patron_id) #{loan.Patron.first_name} #{loan.Patron.last_name} 
            td #{loan.loaned_on}
            td #{loan.return_by}
            td #{loan.returned_on}
            td
              a.button(href='/loans/return/' + loan.id) Return Book